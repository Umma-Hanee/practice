    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
    }
    body {
      display: flex;
      flex-direction: column;
      font-family: 'Arial', sans-serif;
      background: linear-gradient(to top, #002855, #d74292);
    }
     body {
      padding-bottom: 4rem; /* Add some space at the bottom */
    }

    /* Add spacing between funding categories */
    .funding-category {
      margin-bottom: 2rem;
    }

    /* Center the funding category content */
    .funding-category {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
    }

    /* Increase the font size for category titles */
    .funding-category h2 {
      font-size: 1.8rem;
    }

    /* Increase spacing between funding items */
    .funding-category ul {
      margin-top: 1.5rem;
    }

    /* Increase spacing between footer items */
    .footer div {
      margin-bottom: 1rem;
    }
    .content {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }
    .footer {
      padding: 1rem;
      background: linear-gradient(to top, #002855, #d74292);
      color: #fff;
      text-align: center;
    }
    .grid-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      grid-gap: 1rem;
      margin-top: 2rem;
    }

    .funding-category {
      background-color: rgba(255, 255, 255, 0.1);
      padding: 1rem;
      border-radius: 8px;
    }
  </style>
</head>
