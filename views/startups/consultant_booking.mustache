<!-- consultant_booking.mustache -->
<html>
<head>
  {{> header}}
  <!-- Add any additional styles or scripts you need -->
</head>
<body>
  <div class="container mx-auto mt-8">
    <h2 class="text-2xl font-bold mb-4 text-center">Book a Meeting with {{ consultantName }}</h2>
    <form action="/startups/book_meeting" method="post" class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-md">
      <input type="hidden" name="consultantEmail" value="{{ consultantEmail }}">
      <label for="meetingTime" class="block mb-2 text-sm font-bold text-gray-700">Select a Time Slot:</label>
      <select name="selectedTimeSlot" id="meetingTime" class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300">
        <!-- Render the available time slots for the consultant here -->
        {{#availableTimeSlots}}
        <option value="{{ this }}">{{ this }}</option>
        {{/availableTimeSlots}}
      </select>
      <button type="submit" class="mt-4 w-full px-4 py-2 text-white font-bold bg-blue-500 rounded-md hover:bg-blue-700 focus:outline-none focus:bg-blue-700">
        Book Meeting
      </button>
    </form>
  </div>
</body>
</html>
